{
  "name": "web-services-ecommerce",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "check": "eslint . && npm run lint --prefix server && tsc --noEmit",
    "dev": "concurrently \"npm:dev:client\" \"npm:dev:server\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,mdx}\" --cache",
    "dev:client": "npm run dev --prefix client",
    "dev:server": "npm run dev --prefix server",
    "test:server": "npm test --prefix server",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "format:fix": "npm run format -- --write",
    "typecheck": "tsc --noEmit",
    "test": "npm test --prefix server",
    "test:watch": "npm run test:watch --prefix server",
    "e2e": "npm run e2e --prefix client",
    "prepare": "husky",
    "build": "pnpm run build --filter client && pnpm run build --filter server",
    "start": "npm run start --prefix server"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2"
  },
  "dependencies": {
    "react-markdown": "^10.1.0"
  },
  "packageManager": "pnpm@10.13.1+sha512.37ebf1a5c7a30d5fabe0c5df44ee8da4c965ca0c5af3dbab28c3a1681b70a256218d05c81c9c0dcf767ef6b8551eb5b960042b9ed4300c59242336377e01cfad"
}
