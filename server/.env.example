PORT=8000

# OpenRouter API Configuration
# Get your API key from https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Site Configuration (Update these for production)
SITE_URL=http://localhost:5173  # Frontend URL
SITE_NAME=DevServe

# Database Connection (Docker-based)
DATABASE_URL="postgresql://myuser:mypassword@localhost:5432/mydatabase?schema=public"

JWT_SECRET=YOUR_VERY_STRONG_JWT_SECRET_HERE  # Change this!

# Email Sending Configuration
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password

# Payment Providers
STRIPE_SECRET_KEY=sk_test_...   # Get from Stripe Dashboard
PAYPAL_CLIENT_ID=your_paypal_client_id  # Get from PayPal Developer Dashboard
PAYPAL_CLIENT_SECRET=your_paypal_client_secret  # Get from PayPal Developer Dashboard

# Admin password for seeding
ADMIN_PASSWORD=GENERATE_A_SECURE_PASSWORD_FOR_ADMIN_SEEDING # IMPORTANT: Change this to a secure password for admin user seeding!
